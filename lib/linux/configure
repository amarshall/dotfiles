#!/bin/sh

set -e

gsettings set org.gnome.desktop.interface cursor-blink-timeout 10000000
gsettings set org.gnome.desktop.interface cursor-size 36
gsettings set org.gnome.desktop.interface font-name 'Source Sans Pro 12'
gsettings set org.gnome.desktop.interface monospace-font-name 'Pragmata Pro Mono 12'
gsettings set org.gnome.desktop.interface overlay-scrolling false

gsettings set org.gnome.desktop.privacy remember-recent-files false
