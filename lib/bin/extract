#!/bin/sh

if [ -f "$1" ]; then
  case "$1" in
    *.tar.bz2)   exec tar xjf "$1"   ;;
    *.tar.gz)    exec tar xzf "$1"   ;;
    *.7z)        exec 7z x "$1"      ;;
    *.Z)         exec uncompress "$1";;
    *.bz2)       exec bunzip2 "$1"   ;;
    *.gz)        exec gunzip "$1"    ;;
    *.rar)       exec unrar x "$1"   ;;
    *.tar)       exec tar xf "$1"    ;;
    *.tbz2)      exec tar xjf "$1"   ;;
    *.tgz)       exec tar xzf "$1"   ;;
    *.zip)       exec unzip "$1"     ;;
    *)           echo "Don't know how to extract '$1'.";;
  esac
else
  echo "'$1' is not a valid file."
fi
